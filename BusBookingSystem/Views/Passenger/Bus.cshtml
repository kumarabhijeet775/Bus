@model BusBookingSystem.Models.BusModel
@{
    ViewBag.Title = "Bus";
}

<h2>Search For Bus</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(x => x.BoardingPoint, htmlAttributes: new { @class = "Control-Group col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.BoardingPoint, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.BoardingPoint, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.DestinationPoint, htmlAttributes: new { @class = "Control-Group col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.DestinationPoint, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.DestinationPoint, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>


    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>